<div class="main">
  <div class="article">

    <h1>Listing all articles</h1>

    <% @articles.each do |article| %>
      <% if article.visible %>
        <h2><%= link_to(article.title, article_path(article.id)) %></h2>
        <%= "#{article.body}".html_safe %>
      <% end %>
    <% end %>

  </div>
</div>
